@model MVC_EF_Start_8.Models.OutageRecord

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<h2>Confirm Deletion</h2>

<p>Are you sure you want to delete the outage for facility: <strong>@Model.facility</strong>?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="facility" />
    <button type="submit">Yes, Delete</button>
    <a asp-action="Read">Cancel</a>
</form>
