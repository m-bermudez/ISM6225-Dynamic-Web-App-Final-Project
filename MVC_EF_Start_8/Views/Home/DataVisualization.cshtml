@model List<MVC_EF_Start_8.Models.OutageRecord>
@{
    ViewData["Title"] = "Data Visualization Dashboard";
    Layout = "_Layout";
}

<section class="intro">
    <h2>@ViewData["Title"]</h2>
    <p>Explore interactive charts showcasing our nuclear outage data.</p>
</section>

<div class="chart-container">
    <h3>Daily Nuclear Outage (MW)</h3>
    <canvas id="lineChart"></canvas>
</div>

<div class="chart-row">
    <div class="chart-container">
        <h3>Total Outage by Generator (MW)</h3>
        <canvas id="barChart"></canvas>
    </div>
    <div class="chart-container">
        <h3>Frequency of Outage</h3>
        <canvas id="pieChart"></canvas>
    </div>
</div>

@section Styles {
    <style>
        .chart-row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .chart-container {
            flex: 1;
            min-width: 300px;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
}