@{
    ViewData["Title"] = "Update";
    Layout = "_Layout";
}

<h2>Update Outage Details</h2>

<form>
    <div>
        <label for="plantName">Plant Name:</label>
        <input type="text" id="plantName" name="plantName" value="Example Plant A" required />
    </div>

    <div>
        <label for="startDate">Outage Start Date:</label>
        <input type="date" id="startDate" name="startDate" value="2025-04-01" required />
    </div>

    <div>
        <label for="endDate">Outage End Date:</label>
        <input type="date" id="endDate" name="endDate" value="2025-04-15" required />
    </div>

    <div>
        <label for="reason">Reason:</label>
        <textarea id="reason" name="reason">Scheduled Maintenance</textarea>
    </div>

    <button type="submit">Save Changes</button>
</form>

